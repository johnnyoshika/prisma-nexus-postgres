{
  "name": "minimal-node-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev --respawn -r tsconfig-paths/register src/index.ts",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc && node ./post-build.js",
    "generate": "ts-node --transpile-only -r tsconfig-paths/register src/api/schema",
    "test": "npm run generate && jest"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testEnvironment": "node"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prisma/cli": "^2.15.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/pg": "^7.14.9",
    "get-port": "^5.1.1",
    "graphql-request": "^3.4.0",
    "jest": "^26.6.3",
    "nanoid": "^3.1.20",
    "pg": "^8.5.1",
    "prettier": "^2.2.1",
    "replace-in-file": "^6.1.0",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@prisma/client": "^2.15.0",
    "apollo-server": "^2.19.2",
    "apollo-server-express": "^2.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "nexus": "^1.0.0"
  }
}
